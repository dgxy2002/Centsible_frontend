<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AndyApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Enables use of custom MaterialToolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Disable dark mode override on physical device -->
        <item name="android:forceDarkAllowed">false</item>

        <!-- Optional customizations -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="Theme.AndyApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AndyApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
